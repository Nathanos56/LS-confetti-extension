{
  "manifest_version": 3,
  "name": "Learning Suite Confetti",
  "version": "1.5",
  "description": "Throws confetti when you submit assignments on learning suite ðŸŽŠ",
  "action": {
    "default_popup": "content_scripts/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://learningsuite.byu.edu/*"],
      "js": ["dist/confetti.bundle.js", "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"]
    }
  ]
}